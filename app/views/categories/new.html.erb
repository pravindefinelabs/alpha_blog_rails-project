<h1  class="text-center mt-4 fw-semibold">Create a new category</h1>
<div class="container ">
  <div class="row justify-content-center ">
    <div class="col-8 " >
      <%= render 'shared/errors',obj: @category %>
      <%= form_with model: @category, local: true, class:"shadow p-2 mb-3 rounded formbg", data: { turbo: false } do |f| %>
        <div class="form-group row mt-3">
          <%= f.label :name,"Category name", class:"col-sm-3 col-form-label fw-semibold "%>
          <div class= "col-sm-9">
            <%= f.text_field :name ,class:"form-control shadow rounded ",placeholder:"Enter a name" %>
          </div>
        </div>
        <div class="form-group row mt-4 mb-2 justify-content-center">
          <%= f.submit class: "btn btn-outline-info w-auto text-light fw-semibold" %>
        </div>
      <% end %>
    </div>
    <div class="d-flex justify-content-center">
      <%= link_to 'Back',  categories_path, class: "btn btn-outline-primary btn-sm mb-5 rounded" %>
    </div>
  </div>
