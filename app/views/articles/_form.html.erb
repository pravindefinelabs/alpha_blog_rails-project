<div class="container ">
  <div class="row justify-content-center ">
    <div class="col-8 " >
      <%= render 'shared/errors', obj:@article%>
      <%= form_with model: @article, local: true, class:"shadow p-2 mb-3 rounded formbg", data: { turbo: false } do |f| %>
        <div class="from-group row ">
          <%= f.label :title , class:"col-sm-2 col-form-label fw-semibold "%>
          <div class= "col-sm-10">
            <%= f.text_field :title ,class:"form-control shadow rounded ",placeholder:"Title of article" %>
          </div>
        </div>
        <div class="from-group row mt-4">
          <%= f.label :description,  class:"col-sm-2 col-form-label fw-semibold "%>
          <div class= "col-sm-10">
            <%= f.text_area :description, rows:10, class:"form-control shadow rounded ",placeholder:"Description of article" %>
          </div>
        </div>
        <div class="form-group row mt-2 justify-content-center">
          <%= f.submit "Save Article  ", class: "btn btn-outline-info w-auto text-light fw-semibold " %>
        </div>
      <% end %>
    </div>
    <div class="d-flex justify-content-center">
      <%= link_to 'Back', articles_path, class: "btn btn-outline-primary btn-sm mb-5 rounded" %>
    </div>
  </div>