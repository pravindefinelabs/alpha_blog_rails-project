<div class="container ">
  <div class="row justify-content-center ">
    <div class="col-8 " >
      <%= render 'shared/errors',obj: @user %>
      <%= form_with model: @user, local: true, class:"shadow p-2 mb-3 rounded formbg", data: { turbo: false } do |f| %>
        <div class="form-group row mt-3">
          <%= f.label :username , class:"col-sm-2 col-form-label fw-semibold "%>
          <div class= "col-sm-10">
            <%= f.text_field :username ,class:"form-control shadow rounded ",placeholder:"Enter a username" %>
          </div>
        </div>
        <div class="form-group row mt-4">
          <%= f.label :email, class: "col-sm-2 col-form-label fw-semibold" %>
          <div class="col-sm-10">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
          </div>
        </div>
        <div class="form-group row mt-4">
          <%= f.label :password,  class:"col-sm-2 col-form-label fw-semibold "%>
          <div class= "col-sm-10">
            <%= f.password_field :password, class:"form-control shadow rounded ",placeholder:"Enter a password" %>
          </div>
        </div>
        <div class="form-group row mt-4 mb-2 justify-content-center">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-info w-auto text-light fw-semibold") %>
        </div>
      <% end %>
    </div>
    <div class="d-flex justify-content-center">
      <%= link_to 'Back', logged_in? ? user_path(current_user) : root_path, class: "btn btn-outline-primary btn-sm mb-5 rounded" %>
    </div>
  </div>